@page "/admin/emails"
@layout AdminLayout
@using OnigiriShop.Data.Models
@attribute [Authorize]
@inherits AdminEmailsBase

<!-- Templates section -->
<div class="card shadow rounded-3 overflow-hidden border mb-4" style="background:#fff;">
    <div class="card-body p-0">
        <h4 class="card-title p-3 mb-0 border-bottom bg-light fw-bold" style="color:#212529; letter-spacing:0.01em;">
            Gestion des templates d&rsquo;emails
        </h4>
        <div class="p-3">
            <table class="table table-sm align-middle">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th class="text-end" style="width:110px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in TemplateTemplates)
                    {
                        <tr>
                            <td>@t.Name</td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => TemplateEditTemplate(t)">
                                    <i class="bi bi-pencil"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (TemplateShowModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background:rgba(33,33,33,0.13);">
        <div class="modal-dialog modal-lg" @onclick:stopPropagation>
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@TemplateModalTitle</h5>
                    <button type="button" class="btn-close" @onclick="TemplateHideModal"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrWhiteSpace(TemplateModalError))
                    {
                        <div class="alert alert-danger">@TemplateModalError</div>
                    }
                    <EditForm Model="TemplateModalModel" OnValidSubmit="TemplateHandleModalValid">
                        <DataAnnotationsValidator />
                        <div class="mb-3">
                            <label>Nom</label>
                            <InputText class="form-control" @bind-Value="TemplateModalModel.Name" />
                            <ValidationMessage For="@(() => TemplateModalModel.Name)" />
                        </div>
                        <div class="mb-3">
                            <label>Contenu HTML</label>
                            <HtmlEditor @bind-Value="TemplateModalModel.HtmlContent" />
                            <div class="border p-2 mt-2" style="min-height:150px">
                                @((MarkupString?)TemplateModalModel.HtmlContent)
                            </div>
                        </div>
                        <div class="mb-3">
                            <label>Contenu texte</label>
                            <InputTextArea class="form-control" @bind-Value="TemplateModalModel.TextContent" Rows="4" />
                        </div>
                        <button class="btn btn-success w-100" type="submit" disabled="@TemplateIsBusy">
                            Mettre à jour
                            @if (TemplateIsBusy)
                            {
                                <span class="spinner-border spinner-border-sm ms-2"></span>
                            }
                        </button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

<!-- Paramètres section -->
<div class="card shadow rounded-3 overflow-hidden border mb-4" style="background:#fff;">
    <div class="card-body p-0">
        <h4 class="card-title p-3 mb-0 border-bottom bg-light fw-bold" style="color:#212529; letter-spacing:0.01em;">
            Paramètres des e-mails
        </h4>
        <div class="p-3">
            <EditForm Model="SettingsModel" OnValidSubmit="SaveSettingsAsync">
                <DataAnnotationsValidator />
                <div class="row g-3">
                    <div class="col-md-6">
                        <label>Adresse expéditeur</label>
                        <InputText class="form-control" @bind-Value="SettingsModel.ExpeditorEmail" />
                    </div>
                    <div class="col-md-6">
                        <label>Nom expéditeur</label>
                        <InputText class="form-control" @bind-Value="SettingsModel.ExpeditorName" />
                    </div>
                    <div class="col-md-6">
                        <label>Sujet invitation</label>
                        <InputText class="form-control" @bind-Value="SettingsModel.InvitationSubject" />
                    </div>
                    <div class="col-md-6">
                        <label>Intro invitation</label>
                        <InputText class="form-control" @bind-Value="SettingsModel.InvitationIntro" />
                    </div>
                    <div class="col-md-6">
                        <label>Sujet reset mot de passe</label>
                        <InputText class="form-control" @bind-Value="SettingsModel.PasswordResetSubject" />
                    </div>
                    <div class="col-md-6">
                        <label>Intro reset mot de passe</label>
                        <InputText class="form-control" @bind-Value="SettingsModel.PasswordResetIntro" />
                    </div>
                    <div class="col-md-6">
                        <label>Sujet confirmation commande</label>
                        <InputText class="form-control" @bind-Value="SettingsModel.OrderSubject" />
                    </div>
                    <div class="col-md-6">
                        <label>Signature</label>
                        <InputText class="form-control" @bind-Value="SettingsModel.Signature" />
                    </div>
                    <div class="col-md-6">
                        <label>Email admin</label>
                        <InputText class="form-control" @bind-Value="SettingsModel.AdminEmail" />
                    </div>
                    <div class="col-12">
                        <label>Texte demande accès</label>
                        <InputTextArea class="form-control" @bind-Value="SettingsModel.NoAccountInfo" Rows="4" />
                        <small class="text-muted">Utilisez {ListeDesLivraisons} pour insérer la liste des lieux de livraison actuels.</small>
                    </div>
                </div>
                <button class="btn btn-success mt-3" type="submit" disabled="@SettingsBusy">
                    Enregistrer
                    @if (SettingsBusy)
                    {
                        <span class="spinner-border spinner-border-sm ms-2"></span>
                    }
                </button>
                @if (!string.IsNullOrEmpty(SettingsMessage))
                {
                    <div class="alert alert-success mt-3">@SettingsMessage</div>
                }
            </EditForm>
        </div>
    </div>
</div>