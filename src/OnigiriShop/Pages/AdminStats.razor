@page "/admin/stats"
@layout AdminLayout
@inherits AdminStatsBase
@attribute [Authorize]

<div class="card shadow rounded-3 overflow-hidden border mb-4" style="background:#fff;">
    <div class="card-body">
        <h4 class="card-title mb-3">Statistiques</h4>
        <div class="row g-3 mb-3">
            <div class="col-auto">
                <label class="form-label mb-1">Du</label>
                <input type="date" class="form-control form-control-sm" @bind="StartDate" />
            </div>
            <div class="col-auto">
                <label class="form-label mb-1">Au</label>
                <input type="date" class="form-control form-control-sm" @bind="EndDate" />
            </div>
            <div class="col-auto align-self-end">
                <button class="btn btn-sm btn-outline-primary" @onclick="LoadAsync">
                    <i class="bi bi-funnel me-1"></i> Filtrer
                </button>
            </div>
        </div>
        @if (Result != null)
        {
            <ul class="list-group">
                <li class="list-group-item">Nombre de commandes : <strong>@Result.TotalOrders</strong></li>
                <li class="list-group-item">Clients distincts : <strong>@Result.UniqueCustomers</strong></li>
                <li class="list-group-item">Chiffre d'affaires : <strong>@Result.TotalRevenue.ToString("0.00") €</strong></li>
                <li class="list-group-item">Produit le plus vendu : <strong>@Result.TopProductName</strong> (@Result.TopProductQuantity)</li>
            </ul>
        }
    </div>
</div>
