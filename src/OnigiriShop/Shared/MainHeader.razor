@using OnigiriShop.Pages
@inherits MainHeaderBase
@using OnigiriShop.Services

<header class="main-title main-title-flex">
    <div class="main-title-left"></div>
    <div class="main-title-center d-flex align-items-center justify-content-center">
        @if (IsAdminContext)
        {
            <span class="badge bg-danger me-3" style="font-size:1rem;">
                <i class="bi bi-shield-lock"></i> ADMIN
            </span>
        }
        @if (IsAdmin && IsEditing)
        {
            <input class="form-control form-control-sm me-2" style="max-width:200px;" @bind="EditedSiteName" />
            <button class="btn btn-sm btn-primary me-1" @onclick="RequestSave" title="Enregistrer"><i class="bi bi-check"></i></button>
            <button class="btn btn-sm btn-secondary" @onclick="CancelEdit" title="Annuler"><i class="bi bi-x"></i></button>
        }
        else if (IsAdmin)
        {
            <span style="cursor:pointer;" @onclick="StartEdit">@SiteName</span>
        }
        else
        {
            @SiteName
        }
    </div>
    <div class="main-title-right d-flex align-items-end justify-content-end me-3">
        @if (IsAuthenticated)
        {
            <a class="user-info ms-2 me-2 text-decoration-none"
               href="/profile"
               data-bs-toggle="tooltip" title="Voir mon profil">
                <i class="bi bi-person-circle"></i>
                <span class="text-nowrap">@UserNameOrEmail</span>
            </a>
            <button class="header-btn header-btn-danger ms-2"
                    data-bs-toggle="tooltip"
                    data-bs-placement="bottom"
                    title="Se déconnecter"
                    @onclick="ConfirmLogout">
                <i class="bi bi-box-arrow-right"></i>
            </button>
        }
        else
        {
            <button class="header-btn header-btn-success ms-2"
                    data-bs-toggle="tooltip"
                    data-bs-placement="bottom"
                    title="Se connecter"
                    @onclick="ShowLoginModal">
                <i class="bi bi-box-arrow-in-right"></i>
            </button>
        }
    </div>
</header>

<div class="modal fade" id="logoutConfirmModal" tabindex="-1" aria-labelledby="logoutConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <span class="modal-title fs-5" id="logoutConfirmModalLabel">
                    <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
                </span>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                Êtes-vous sûr de vouloir vous déconnecter&nbsp;?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-danger" @onclick="OnConfirmLogout">Se déconnecter</button>
            </div>
        </div>
    </div>
</div>

<LoginModal Visible="_showLoginModal" OnHide="HideLoginModal" />

@if (ShowConfirmModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background:rgba(33,33,33,0.18);">
        <div class="modal-dialog modal-dialog-centered" @onclick:stopPropagation>
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmer le nouveau nom du site</h5>
                </div>
                <div class="modal-body">
                    Valider <strong>@EditedSiteName</strong> ?
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CancelConfirm">Annuler</button>
                    <button class="btn btn-primary" @onclick="SaveAsync">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>
}